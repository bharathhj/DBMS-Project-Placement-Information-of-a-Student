<%- include('../partials/header'); %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit Firm <%= firm.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">

        <form action="/firms/<%= firm._id %>/?_method=PUT" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="firm[name]" id="name" placeholder="Name" value="<%= firm.name %>">
            </div>
            <div class="form-group">
                <label for="image">Image Url of the Firm</label>
                <input class="form-control" type="text" name="firm[image]" id="image"   placeholder="Image Address" value="<%= firm.image %>" required>
                <small>Click <a href="https://www.youtube.com/watch?v=_eWFn-Z_Vvk">here</a> for tutorial on how to copy Image urls.</small>
            </div>
            <div class="form-group">
                <label for="contact">Firm Contact</label>
                <input class="form-control" type="text" name="firm[contact]" id="contact" placeholder="Contact details of the Company" value="<%= firm.contact %>">
            </div>
            <div class="form-group">
                <label for="location">Firm Location</label>
                <input class="form-control" type="text" name="firm[location]" id="location" placeholder="Location of the Company" value="<%= firm.location %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/firms">Go Back</a>
    </div>
</div>

<%- include('../partials/footer'); %>