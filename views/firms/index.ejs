<%- include('../partials/header'); %>


 <div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to DSATM P I</h1>
            <p>View our college Placement Info from DSATM Alumni </p>
            <p>
                <a class="btn btn-primary btn-large" href="/firms/new">Add New Firms</a>
            </p>
        </div>
    </header>


    <div>
        <div class="col-lg-12">
            <h3 class="fcolor">List Firms where Students are placed !</h3>
        </div>
        <br>
    </div>

     <div class="row text-center" style="display:flex; flex-wrap: wrap;" >
    <% firms.forEach(function(firm){ %>
       <div class="col-md-3 col-sm-6">
           <div class="thumbnail">
               <img src="<%= firm.image%>" width="200" height="180">
               <div class="caption">
                   <h4 class="fcolor"><%=firm.name%></h4>
               </div>
               <p>
                   <a href="/firms/<%= firm._id%>" class="btn btn-primary">More Info</a>
               </p>
           </div>
       </div>
    <% }) %>
     </div>

 </div>



<%- include('../partials/footer'); %>
