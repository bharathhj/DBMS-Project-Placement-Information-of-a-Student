<%- include('../partials/header'); %>


 <div class="container">
     <br>
     <br>
    <header class="jumbotron">
        <div class="container">
            <br>
            <br>
            <h1>Welcome to DSATM P I</h1>
            <p>View our college Placement Info from DSATM Alumni </p>
            <p>
                <a class="btn btn-primary btn-large" href="/firms/new">Add New Firms</a>
            </p>
        </div>
    </header>

     <br>
     <br>
    <div>
        <div class="col-lg-12">
            <h3 class="fcolor">List Firms where Students are placed !</h3>
        </div>
        <br>
    </div>
     <br>
     <br>

     <div class="row text-center" style="display:flex; flex-wrap: wrap;" >
    <% firms.forEach(function(firm){ %>
       <div class="col-md-3 col-sm-6">
           <div class="thumbnail">
               <div class="firm-effects">
                   <a style="text-decoration: none" href="/firms/<%= firm._id%>"><img  style="border-radius: 7%" src="<%= firm.image%>" width="200" height="180"><h4 class="fcolor"><%=firm.name%></h4><br><br></a>
               </div>
           </div>
       </div>
    <% }) %>
     </div>

 </div>



<%- include('../partials/footer'); %>
