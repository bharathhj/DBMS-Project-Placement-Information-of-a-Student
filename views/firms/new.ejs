<%- include('../partials/header'); %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Append a New Firm</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">

        <form action="/firms" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="image">Image Url of the Firm</label>
                <input class="form-control" type="text" name="image" id="image"   placeholder="Image Address" required>
                <small>Click <a href="https://www.youtube.com/watch?v=_eWFn-Z_Vvk">here</a> for tutorial on how to copy Image urls.</small>
            </div>
            <div class="form-group">
                <label for="contact">Firm Contact</label>
                <input class="form-control" type="text" name="contact" id="contact" placeholder="Contact details of the Company">
            </div>
            <div class="form-group">
                <label for="location">Firm Location</label>
                <input class="form-control" type="text" name="location" id="location" placeholder="Location of the Company">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/firms">Go Back</a>

    </div>
</div>

<%- include('../partials/footer'); %>